@model XpertStore.Data.Models.Categoria

@{
    ViewData["Title"] = "Excluir Categoria";
}

<h1>@ViewData["Title"]</h1>
<hr />

<h3>Tem certeza que deseja excluir @Model.Nome?</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fa fa-check"></i> Excluir</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
    </form>
</div>
